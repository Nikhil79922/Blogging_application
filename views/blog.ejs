<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <%- include('partials/header.ejs') %>
</head>

<body>
    <%- include('partials/navbar.ejs') %>

        <div class="container mt-3">
            <h1 class="text-decoration-underline">
                <%= blog.title %>
            </h1>
            <img src="<%= blog.profileImage %>" alt="" width="700" class="mt-2">
            <pre class="mt-3 lh-2 "><%= blog.body %></pre>
        </div>

        <div class="container mt-3">
            <img class="rounded-circle" src="<%= blog.createdBy.profileImage %>" width="50" alt="">&nbsp;
           <span class="fs-5 mt-5"><%= blog.createdBy.name %></span> 
        </div>

        <div class="container mt-1">
            <h1>Comments (<%= comments.length %>)</h1>
        </div>
        <div class="container">
        <form action="/blog/comment/<%= blog._id %>" method="post" class="ms-2" >
            <div class="mb-3 mt-3">
              <input name="content" type="text" class="form-control" id="exampleInputEmail1" placeholder="Add Your Comments" >
            </div>
            <button type="submit" class="btn btn-primary">Add comment</button>
          </form>
        </div>

        <% comments.forEach(comment => { %>
            <div class="container mt-2">
                <img class="rounded-circle" src="<%= comment.createdBy.profileImage %>" width="50" alt="">&nbsp;<span class="fs-5 mt-5"><%= comment.createdBy.name %></span> 
               <pre><%= comment.content%></pre> 
            </div>
        <% }) %>
       
        




        <%- include('partials/scripts.ejs') %>
</body>

</html>